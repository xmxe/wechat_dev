page {
    height: 100%;
    color: #2a2a2a;
    font-size: 36rpx;
    background-color: #fffefa;
}

.bar {
    width: 100%;
    bottom: 0rpx;
    margin-top: 10px;
    margin-bottom: 40px;
}

.moreBar {
    width: 93%;
    display: inline-block;
    white-space: nowrap;
    border: 1rpx solid #d8d0d0;
    height: 86px;
    margin: 1% 3%;
    padding-left: 0.5%;
    justify-content: center;
    text-align: center;
    opacity: 1
}

.moreBarText {
    width: 100%;
    font-size: 12px;
    color: rgb(163, 163, 163);
    background: none;
    text-align: center;

}

.moreText::after {
    border: none;
}

.moreApp {
    width: 50px;
    height: 50px;
    justify-content: center;
    align-items: center;
    margin: 10px 4px;
    display: inline-block;
}

.moreApp image {
    width: 50px;
    height: 50px;
}

.moreAppText {
    font-size: 10px;
    color: rgb(163, 163, 163);
    background: none;
    text-align: center;
}